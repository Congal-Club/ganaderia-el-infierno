      <label class='w-full font-medium'>
        Dirección de Correo Electrónico
        
        <input
          class='font-normal w-full outline-none border border-1 border-gray-300 py-2 px-4 mt-1 rounded'
          type="email"
          placeholder="Email"
        />
      </label>
    </div>

    <div class='w-full flex flex-col gap-1 mb-4'>
      <label class='w-full font-medium'>
        Consulta
        
        <textarea
          class='font-normal w-full outline-none border border-1 border-gray-300 py-2 px-4 mt-1 rounded'
          placeholder="Mensaje"
        />
      </label>
    </div>

    <div class='flex justify-center'>
      <button class='py-2 px-8 bg-indigo-500 text-white font-bold rounded shadow hover:bg-indigo-700 hover:scale-105 hover:shadow-xl transition'>
        Enviar
      </button>
    </div>
